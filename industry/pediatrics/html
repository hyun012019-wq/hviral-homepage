  <script>
    // 사이드 메뉴 열고 닫기
    function toggleMenu(open) {
      const menu = document.getElementById("sideMenu");
      const backdrop = document.getElementById("sideBackdrop");
      if (open) {
        menu.classList.add("open");
        backdrop.classList.add("show");
        document.body.style.overflow = "hidden";
      } else {
        menu.classList.remove("open");
        backdrop.classList.remove("show");
        document.body.style.overflow = "";
      }
    }

    // 문의 폼 제출 처리: 대표님 폰 문자앱으로 내용 넘기기
    function handleContactSubmit(e) {
      e.preventDefault();
      const name = document.getElementById("contactName").value.trim();
      const phone = document.getElementById("contactPhone").value.trim();
      const industry = document.getElementById("contactIndustry").value.trim();
      const message = document.getElementById("contactMessage").value.trim();
      const termsRequired = document.getElementById("termsRequired").checked;

      if (!termsRequired) {
        alert("개인정보 수집 및 이용에 동의해 주세요.");
        return;
      }
      if (!name || !phone || !industry || !message) {
        alert("필수 항목을 모두 입력해 주세요.");
        return;
      }

      const smsBody =
        `[H VIRAL 홈페이지 문의 - 소아과]\n` +
        `성명: ${name}\n연락처: ${phone}\n병원명·진료 형태: ${industry}\n` +
        `내용: ${message}`;

      const encoded = encodeURIComponent(smsBody);
      const smsUrl = `sms:01032689899?body=${encoded}`;
      window.location.href = smsUrl;

      alert(
        "문의 내용을 문자로 전송하실 수 있도록 문자앱을 열었습니다.\n" +
          "문자앱이 열리지 않는 환경에서는 카카오톡 또는 전화 상담을 이용해 주세요."
      );

      e.target.reset();
    }
  </script>
</body>
</html>
